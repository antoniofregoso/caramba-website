<odoo>
	<template id="assets_frontend" inherit_id="website.assets_frontend" name="Blog Front-end assets">
	    <xpath expr="." position="inside">
	    	<script id="dsq-count-scr" src="//antoniofregoso-blog.disqus.com/count.js" async="async"></script>
	    </xpath>
</template>

<!-- Options: Blog Post: user can reply -->
<template id="opt_blog_post_disqus_comment" inherit_id="website_blog.opt_blog_post_complete_comment" >
		<xpath expr="//section[@id='comments']"  position="replace">
			<section id="comments" class="read_width">
				<div id="disqus_thread"></div>
				<t t-raw="website.get_disqus(request.httprequest.url_root + 'blog/' + slug(blog_post.blog_id) + '/post/' + slug(blog_post), blog_post.id)" />
			</section>
		</xpath>
</template>

<template id="opt_blog_post_rc_disqus_comment" inherit_id="website_blog_post_right_column.opt_blog_post_rc_complete_comment" >
		<xpath expr="//section[@id='comments']"  position="replace">
			<section id="comments" class="read_width">
				<div id="disqus_thread"></div>
				<t t-raw="website.get_disqus(request.httprequest.url_root + 'blog/' + slug(blog_post.blog_id) + '/post/' + slug(blog_post), blog_post.id)" />
			</section>
		</xpath>
</template>

</odoo>